<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleText"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <!-- Campo de texto para Engagement ID -->
    <EditText
        android:id="@+id/engagementIdInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/engagementId"
        android:background="@android:color/darker_gray"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:inputType="text" />

    <!-- Campo de texto para Contract ID -->
    <EditText
        android:id="@+id/contractIdInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@android:color/darker_gray"
        android:hint="@string/contractId"
        android:inputType="text"
        android:padding="12dp" />

    <!-- Botón Entrar -->
    <Button
        android:id="@+id/enterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enterButton"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_blue_light"
        android:padding="12dp" />

    <Button
        android:id="@+id/connectWalletButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect Wallet"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_green_light"
        android:padding="12dp"
        android:layout_marginTop="16dp" />

</LinearLayout>
